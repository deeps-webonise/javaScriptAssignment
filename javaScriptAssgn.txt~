function set(key, value) 
{
   this.setItem(key, value);
   console.log(key,value);

   // based on call this will point either session storage or localstorage
}

function length()
{

 console.log(this.length); //returns the number of value stored

}

function get(key)
{

   console.log(this.getItem(key));

}

function remove(key)
{

   console.log(this.removeItem(key));

}

function removeall()
{

   console.log(this.clear());
   
}


//bind is used for later invocation of function
//bind stores the function in a variable

var length_s=length.bind(sessionStorage);
var length_l=length.bind(localStorage);

var set_s=set.bind(sessionStorage);
var set_l=set.bind(localStorage);

var get_s=get.bind(sessionStorage);
var get_l=get.bind(localStorage,"key2");

var remove_s=remove.bind(sessionStorage);
var remove_l=remove.bind(localStorage);

var removeall_s=removeall.bind(sessionStorage);
var removeall_l=removeall.bind(localStorage);


//Now calling the functions
length_s();
length_l();

set_s("key1","value1");
set_l("key2","value2");

length_s();
length_l();

get_s("key1");
get_l("key2");

remove_s("key1");
remove_l("key2");

length_s();
length_l();

removeall_s();
removeall_l();

length_s();
length_l();
